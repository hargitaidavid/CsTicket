<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="csillag.model.Csatolmany" table="CSATOLMANY">
        <id name="id" column="CSATOLMANY_ID">
            <generator class="native"/>
        </id>
        <property name="cim"/>
        <property name="adat" type="blob">
			<column name="ADAT"/>
		</property>
        
        <many-to-one name="tartalmazo" class="csillag.model.Ticket" column="TARTALMAZO_ID"/>
    </class>

</hibernate-mapping>